{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Effect": "Allow",
        "Principal": {
          "AWS": ["*"]
        },
        "Action": ["s3:ListBucket","s3:ListAllMyBuckets", "s3:GetBucketLocation"],
        "Resource": ["arn:aws:s3:::*"]
      },
      {
        "Effect": "Allow",
        "Principal": {
          "AWS": ["*"]
        },
        "Action": [
          "s3:*"
        ],
        "Resource": [
          "arn:aws:s3:::lightningstream/*"
        ]
      }
    ]
  }
  